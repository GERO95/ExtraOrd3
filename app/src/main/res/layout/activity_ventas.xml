<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityVentas">

    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/titleVta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Registros en BD"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:fontFamily="sans-serif-condensed"
        />

    <TextView
        android:id="@+id/impRows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/titleVta"
        android:text="Vacío"/>

    <Button
        android:id="@+id/btQuery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/impRows"
        android:layout_marginTop="10dp"
        android:text="Consultar BD"/>

    <Button
        android:id="@+id/returnBt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btQuery"
        android:layout_centerHorizontal="true"
        android:text="Regresar al Menú Principal"/>

</RelativeLayout>